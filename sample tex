\newglossaryentry{PiL}{
  sort={PiL},
  name={$\Pi L$},
  description={
      Multipolarity $L\in\{0,\, 1,\, 2,\, \dots\}$ and electromagnetic radiation character $\Pi\in\{\symup{E},\, \symup{M}\}$.
      For example, $\symup{E}1$ strength refers to electric dipole strength and an $\symup{M}2$ transition is short for a magnetic quadrupole transition.
      See also \cref{sec:Selection-Rules-Electromagnetic-Transitions}. % Also, because this refers to the selection rules of electromagnetic transitions with real photons.
    }
}

% This is parsed before the \piPar command is defined. Thus the \piPar command is not available here and I just use \pi directly here.
\newglossaryentry{Jpi}{
  sort={J1},
  name={$J^\pi$},
  description={Spin $J$ and parity $\pi\in\{+,\, -\}$ quantum numbers of a (nuclear) state}
}

\newglossaryentry{state}{
  sort={J2},
  name={$J^\pi_k$},
  description={State labeled $k$ with spin $J$ and parity $\pi$ of a nucleus. If $k$ is a number and $J$ and $\pi$ concrete values, this refers to the $k$-th state of spin $J$ and parity $\pi$ of a nucleus. For example, \st2+1 is the first state with spin and parity \jp2+. Typical choices for the label variable instead of $k$ are $i$ for an initial state, $x$ for an excited state, $f$ for a final state and $GS$ for the ground state.}
}

\newglossaryentry{transition}{
  sort={J3},
  name={$J^\pi_i\to J^\pi_f$},
  description={Transition from an initial state $J^\pi_i$ to a final state $J^\pi_f$. Multiple arrows such as $J^\pi_i\to J^\pi_x\to J^\pi_f$ indicate a cascade of transitions.}
}

\newglossaryentry{Sigma-n}{
  sort={Sigma-n},
  name={$\Sigma n$},
  description={Used as an index to refer to the total photoneutron cross section $\sigma_{\Sigma\text{n}}$ defined in \cref{eq:GDR-Photoabsorption-Cross-Section-Approximation}.}
}

\newglossaryentry{reaction-notation}{
  sort={xy},
  name={($x$,$y$)},
  text={reaction notation},
  description={
      Compact notation for nuclear reactions with incident particle $x$ and outgoing particle(s) $y$.
      For example, (n,\γ) denotes neutron capture reactions and (\γ,$\γ^\prime$) \acrshort{nrf} reactions.
      Can also include the target and/or the reaction product in the notation.
      Examples for this are \Ce{}(\γ,n)\ce{^{139}Ce} and \Sm{}(\γ,p) for photonuclear reactions on \Ce and \Sm, respectively.
    }
}

\newglossaryentry{real-photon}{
  name={Real photon},
  text={real photon},
  hyphenated={real-photon},
  description={A Photon that can exist as a free particle. Used to emphasize the difference to a virtual photon which is only exchanged as an intermediate particle in interactions via the electromagnetic force and doesn't necessarily obey the energy-momentum relation $E=pc$.}
}

\newglossaryentry{mvme}{
  name={mvme},
  text={mvme},
  description={A ready-to-use \acrshort{daq} system provided by mesytec GmbH \& Co. KG for use with their commercial, off-the-shelf \acrshort{daq} hardware. The mvme software with mesytec hardware was used as the \acrshort{daq} for the experiments of this work. See \cref{sec:DAQ}.}
}

\newglossaryentry{clover-detector}{
  name={Clover detector},
  text={clover detector},
  description={
      A type of \acrshort{hpge} semiconductor detector for detection of ionizing radiation, such as \γ rays.
      It consists of four \acrshort{hpge} crystals arranged in a close $2\times2$ cloverleaf-like geometry along its main axis.
      Thus, in principle, a clover detector represents four separate \acrshort{hpge} detectors housed in a common cryostat.
      The individual sub-detectors are referred to as clover leaves and their signals can be read out independently.
    }
}

\newglossaryentry{geant4}{
  name={\textsc{Geant4}},
  text={\textsc{Geant4}},
  description={
      A software toolkit for the computer simulation of the passage of particles through matter developed by the \textsc{Geant4} Collaboration.
      Based on a Monte-Carlo approach and an extensive data set on electromagnetic, strong and weak interaction processes of particles in matter.
      See also \cref{sec:Detector-Response-Simulations}.
    }
} % Maybe unnecessary, I also don't have entries for HDTV, utr, PyMC, NumPy, ArviZ, etc.

\newglossaryentry{beam-profile}{
  name={Beam profile},
  text={beam profile},
  hyphenated={beam-profile},
  description={The shape of the spectral density $\frac{\dd \Phi}{\dd E}$ of a photon or particle beam with respect to the energy $E$.}
}

\newglossaryentry{photon-flux}{
  name={Photon flux},
  text={photon flux},
  plural={photon fluxes},
  hyphenated={photon-flux},
  description={
      The number of photons $\Phi$ passing through the plane perpendicular to the beam direction at the target position in a measurement.
      Often the term is also used to refer to its temporal density $\frac{\dd \Phi}{\dd t}$, spatial density $\frac{\dd^2 \Phi}{\dd x \dd y}$, spectral density $\frac{\dd \Phi}{\dd E}$ or a combination of these.
      In this work, total photon flux and the symbol $\Phi$ always refer to the total number of photons and never to a density.
      If the differences are important, the respective quantity is explicitly stated in text or by its analytical form.
    }
}

% \newglossaryentry{photonuclear-reaction}{
%   name={Photonuclear reaction},
%   text={photonuclear reaction},
%   hyphenated={photonuclear-reaction},
%   description={A nuclear reaction induced by \glspl{real-photon}. See \cref{ch:Photonuclear-Reactions}.}
% } % I explain photonuclear reaction in the text and it is a standard term (not mathematical notation), that one can easily look up elsewhere (Google). If I included this, I would have to define every other standard term as well (photodisintegration, photoabsorption, photoneutron, photofission, transition strengths, mixed transition, pure transition, multipole mixing ratio, etc.)

% \newglossaryentry{photodisintegration}{
%   name={Photodisintegration},
%   text={photodisintegration},
%   description={A nuclear reaction induced by \glspl{real-photon} in which nucleons are removed from the nucleus. Sometimes also called phototransmutation.}
% } % Same as with photonuclear reaction

\newglossaryentry{detector-response}{
  name={Detector response},
  text={detector response},
  hyphenated={detector-response},
  description={
      The (conditional) probability distributions of the energy deposited in a detector, and thus measured by it, when singular particles, here always photons, are being emitted with a specific energy from the target position of the setup following a specific angular distribution.
      The detector response to a particular photon energy, hence, describes the shape of the detector's spectrum expected for a respective mono-energetic photon source and, on an absolute scale, the expected number of counts in the spectrum for a given number of emitted photons.
      Notably, the detector response contains the \acrshort{fep}, \acrshort{sep} and \acrshort{dep} efficiencies.
      However, resolution effects are not considered part of the detector response in this work.
      Unless otherwise noted, the angular distribution is implicitly assumed to be isotropic.
      Often, the term detector response is also used to refer solely to the expected shape of the detector's spectrum or even just those parts of it, which are not the \acrshort{fep}.
      See also \cref{sec:Detector-Response-Simulations}.
    }
}

