% \newacronym[
%   description={The Text that is shown in the list of abbreviations}
% ]{TheInternalKey}{TheAbbreviation}{the long form of the acronym in the text}

\newacronym[
  description={Isovector giant dipole resonance. See \cref{ch:Introduction}.}
]{gdr}{GDR}{isovector giant dipole resonance}

\newacronym[
  description={Nuclear resonance fluorescence. See \cref{ch:Photonuclear-Reactions}.}
]{nrf}{NRF}{nuclear resonance fluorescence}

\newacronym[
  description={Elastic nuclear resonance fluorescence. The special \acrshort{es} case of \acrshort{nrf}, in which a nucleus returns to its initial state (usually the ground state) by a single \γ emission after the photoexcitation.}
]{enrf}{ENRF}{elastic NRF}

\newacronym[
  description={Elastic scattering. A scattering process in which the total kinetic energy of the system is conserved, and no energy is transferred to internal degrees of freedom of the scattering partners.}
]{es}{ES}{elastic scattering}

\newacronym[
  description={Ground state}
]{gs}{GS}{ground state}

\newacronym[
  description={Background}
]{bg}{BG}{background}

\newacronym[
  description={Proton}
]{proton}{p}{proton}

\newacronym[
  description={Neutron}
]{neutron}{n}{neutron}

\newacronym[
  description={Breit-Wigner. See \cref{sec:Photoabsorption-Cross-Section}.}
]{bw}{BW}{Breit-Wigner}

\newacronym[
  description={Standard Lorentzian. See \cref{sec:Photoabsorption-Cross-Section} for discussion of the SLO model and \cref{eq:GDR-Photoabsorption-Cross-Section-Parametrization} for the SLO parametrization of the \acrshort{gdr}'s photoabsorption cross section.}
]{slo}{SLO}{standard Lorentzian}

\newacronym[
  description={Full width at half maximum. The difference between the two values of the independent variable $x$ at which the dependent variable $f(x)$ is equal to half of its maximum value. Hence, for a normal distribution with variance $\sigma^2$, the FWHM is $2\sqrt{2\ln(2)}\sigma\approx2.355\sigma $.}
]{fwhm}{FWHM}{full width at half maximum}

\newacronym[
  description={Probability density function}
]{pdf}{PDF}{probability density function}

\newacronym[
  description={Highest density interval. The shortest interval containing a given fraction of the probability mass of a distribution. Also known as shortest credible interval. To give an example, the \qty{68.3}{\percent} HDI of a normal distribution with mean $\mu$ and variance $\sigma^2$ is the commonly used 1-$\sigma$ interval $[\mu-\sigma,\mu+\sigma]$.}
]{hdi}{HDI}{highest density interval}

\newacronym[
  description={Markov chain Monte Carlo}
]{mcmc}{MCMC}{Markov chain Monte Carlo}

\newacronym[
  description={Thomas-Reiche-Kuhn. See \cref{ch:Introduction}.}
]{trk}{TRK}{Thomas-Reiche-Kuhn}

\newacronym[
  description={$n$-particle-$n$-hole},
  name={$n$p-$n$h},
  sort={np-nh}
]{1p-1h}{1p-1h}{one-particle-one-hole}

\newacronym[
  description={Full-energy peak}
]{fep}{FEP}{full-energy peak}

\newacronym[
  description={Single-escape peak}
]{sep}{SEP}{single-escape peak}

\newacronym[
  description={Double-escape peak}
]{dep}{DEP}{double-escape peak}

\newacronym[
  description={Laser-Compton back-scattering. The process of back-scattering laser light off a relativistic electron beam used to produce high energy photon beams. See \cref{sec:LCB-Technique}.}
]{lcb}{LCB}{laser-Compton back-scattering}

\newacronym[
  description={The High Intensity \γ-ray Source. A \acrshort{lcb} facility operated by the \acrshort{tunl}. See \cref{sec:HIGS}.}
]{higs}{HI\texorpdfstring{\ensuremath{{\symup{\gamma}}}}{γ}S}{High Intensity \texorpdfstring{\ensuremath{{\symup{\gamma}}}}{γ}-ray Source} % This is parsed before the \γ command is defined.

\newacronym[
  description={Upstream target room. The experimental site at \acrshort{higs} at which the experiments of this work were conducted.}
]{utr}{UTR}{upstream target room}

\newacronym[
  description={Triangle Universities Nuclear Laboratory. A nuclear physics research laboratory located at Duke University in Durham, North Carolina, USA.}
]{tunl}{TUNL}{Triangle Universities Nuclear Laboratory}

\newacronym[
  description={Duke Free Electron Laser Laboratory. A research facility located at Duke University in Durham, North Carolina, USA.}
]{dfell}{DFELL}{Duke Free Electron Laser Laboratory}

\newacronym[
  description={Free-electron laser}
]{fel}{FEL}{free-electron laser}

\newacronym[
  description={Data acquisition}
]{daq}{DAQ}{data acquisition}

\newacronym[
  description={High-purity germanium. A material used in semiconductor detectors for detection of ionizing radiation, such as \γ rays.}
]{hpge}{HPGe}{high-purity germanium}

